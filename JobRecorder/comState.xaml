<UserControl x:Class="JobRecorder.ComState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobRecorder"
             mc:Ignorable="d" BorderThickness="1"
             Width="200"
             >
    <UserControl.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFB47BEE" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.BorderBrush>
    <StackPanel>
        <Label Name="labNum" Margin="10" ClipToBounds="True" Background="#FFC3B7EC" Content="记录仪编号：0" />
        <ProgressBar Name="ComProgress" Height="10" Margin="10" />
        <Label Name="labState" Margin="10" ClipToBounds="True" Background="#FFC3B7EC" Content="当前状态：传输中…" />
    </StackPanel>
</UserControl>
